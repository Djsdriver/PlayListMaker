<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- стиль текста активити настройки темная тема -->
    <style name="TextStyleSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- стиль текста активити главное кнопки темная тема-->
    <style name="MainLayoutButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    <!-- стиль текста активити главное темная тема -->
    <style name="MainTextActivityMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" >
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3772E7</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#AEAFB4</item>


    </style>

    <!-- стили для треков -->
    <style name="ItemTrackName" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ItemArtistNAmeAndTime" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>