<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- стиль текста активити настройки -->
    <style name="TextStyleSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- стиль текста активити настройки -->
    <style name="MainLayoutButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- стиль текста активити главное -->
    <style name="MainTextActivityMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
    </style>
</resources>