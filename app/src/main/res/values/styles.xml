<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- стиль текста активити настройки -->
    <style name="TextStyleSettings" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- стиль текста активити главное -->
    <style name="MainLayoutButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    <!-- стиль текста активити главное -->
    <style name="MainTextActivityMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" >
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3772E7</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#AEAFB4</item>


    </style>

    <style name="EditViewSearchActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:backgroundTint">@color/backgroundTintEditSearch</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/hintTextSettingActivity</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:ems">10</item>
        <item name="android:lines">@integer/material_motion_duration_long_1</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hintTextSettingActivity</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>


    <!-- стили для треков -->
    <style name="ItemTrackName" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ItemArtistNAmeAndTime" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/iconColorSettingLayout</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchingActivityButtonUpdateStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/buttonUpdateSearchActivity</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/textColorButtonUpdate</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="textBadConnetion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">4</item>
        <item name="android:textColor">@color/black_mode</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
    </style>

    <style name="textNotFound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_mode</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
    </style>

    <style name="coverTrack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="trackNamePlayer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textColor">@color/black_mode</item>
        <item name="android:textSize">24sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="artistNameTextPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/black_mode</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="durationTrackPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textColor">@color/black_mode</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="durationTrack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textColor">@color/black_mode</item>
    </style>

    <style name="album">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textColor">@color/black_mode</item>
    </style>

    <style name="yearTrack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="android:textColor">@color/black_mode</item>
    </style>


    <style name="MediaTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:fontFamily">@font/ys_text_medium_regular</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>