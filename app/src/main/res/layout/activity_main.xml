<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundActivity"
    android:padding="@dimen/paddingFrameLayoutMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/playlist_maker"
            style="@style/MainTextActivityMain" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search"
            style="@style/MainLayoutButtonStyle"
            android:text="@string/TextSearchMainLayout"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconTintActivityMain"
            app:iconTint="@color/iconTintActivityMain"
            app:cornerRadius="@dimen/cornerRadiusActivityMain"
            app:backgroundTint="@color/backgroundTintActivityMain"
            android:foreground="?attr/selectableItemBackground"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_media"
            style="@style/MainLayoutButtonStyle"
            android:text="@string/TextMediaMainLayout"
            app:icon="@drawable/ic_media"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconTintActivityMain"
            app:iconTint="@color/iconTintActivityMain"
            app:cornerRadius="@dimen/cornerRadiusActivityMain"
            app:backgroundTint="@color/backgroundTintActivityMain"
            android:foreground="?attr/selectableItemBackground"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_setting"
            style="@style/MainLayoutButtonStyle"
            android:text="@string/TextSettingsMainLayout"
            app:icon="@drawable/ic_setting"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconTintActivityMain"
            app:iconTint="@color/iconTintActivityMain"
            app:cornerRadius="@dimen/cornerRadiusActivityMain"
            app:backgroundTint="@color/backgroundTintActivityMain" />


    </LinearLayout>

</FrameLayout>

